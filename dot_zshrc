# Set the directory we want to store zinit and plugins
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"

# Download Zinit, if it's not there yet
if [ ! -d "$ZINIT_HOME" ]; then
   mkdir -p "$(dirname $ZINIT_HOME)"
   git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi

# Source/Load zinit
source "${ZINIT_HOME}/zinit.zsh"

# Add in zsh plugins
zinit ice wait lucid
zinit light zsh-users/zsh-syntax-highlighting

zinit ice wait lucid turbo
zinit light marlonrichert/zsh-autocomplete
zinit snippet OMZP::git
zinit snippet OMZP::sudo
zinit snippet OMZP::command-not-found

zinit ice wait lucid turbo
zinit light jeffreytse/zsh-vi-mode

zinit ice wait lucid turbo
zinit load atuinsh/atuin

# Define sesh-sessions function if not already defined
function sesh-sessions() {
  {
    exec </dev/tty
    exec <&1
    local session
    session=$(sesh list | fzf --height 40% --reverse --border-label ' sesh ' --border --prompt 'âš¡  ')
    [[ -z "$session" ]] && return
    sesh connect $session
  }
}

# Create a zsh widget to call sesh-sessions
zle -N sesh-sessions-widget sesh-sessions


# All the keybindings
bindkey -v
bindkey -r '^R'
bindkey '^R' _atuin_search_widget
bindkey -M vicmd '^R' _atuin_search_widget
bindkey -M viins '^R' _atuin_search_widget
bindkey '^[s' sesh-sessions-widget

# History
HISTSIZE=5000
HISTFILE=~/.zsh_history
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups

# Aliases
alias l='eza -a'
alias ll='eza -la'
alias c='clear'
alias v='nvim'
alias zz='z -'
alias cz='chezmoi'
alias cza='chezmoi add'
alias cze='chezmoi edit'
alias czd='chezmoi diff'
alias czu='chezmoi update -v'


export DOTNET_ASPIRE_CONTAINER_RUNTIME=podman
eval "$(starship init zsh)"
eval "$(zoxide init zsh)"
